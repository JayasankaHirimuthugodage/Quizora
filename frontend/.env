# =============================================================================
# QUIZORA FRONTEND ENVIRONMENT CONFIGURATION
# =============================================================================

# API Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_BASE_URL=http://localhost:3000

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
REACT_APP_NAME=Quizora
REACT_APP_VERSION=1.0.0
REACT_APP_DESCRIPTION=Online Assessment Platform

# Environment
REACT_APP_ENV=development

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
# Token storage key
REACT_APP_TOKEN_KEY=quizora_token
REACT_APP_REFRESH_TOKEN_KEY=quizora_refresh_token

# Session timeout (in minutes)
REACT_APP_SESSION_TIMEOUT=1440

# Auto-logout on token expiry
REACT_APP_AUTO_LOGOUT=true

# =============================================================================
# UI/UX CONFIGURATION
# =============================================================================
# Theme settings
REACT_APP_DEFAULT_THEME=light
REACT_APP_PRIMARY_COLOR=#2563eb
REACT_APP_SECONDARY_COLOR=#7c3aed

# Pagination
REACT_APP_DEFAULT_PAGE_SIZE=10
REACT_APP_MAX_PAGE_SIZE=100

# File upload
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# =============================================================================
# FEATURE FLAGS
# =============================================================================
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_PRINT_MODE=true
REACT_APP_ENABLE_EXPORT=true

# Quiz features
REACT_APP_ENABLE_TIMED_QUIZZES=true
REACT_APP_ENABLE_QUESTION_SHUFFLE=true
REACT_APP_ENABLE_INSTANT_FEEDBACK=true

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
# Google Analytics (optional)
REACT_APP_GA_TRACKING_ID=

# Sentry error tracking (optional)
REACT_APP_SENTRY_DSN=

# Performance monitoring
REACT_APP_ENABLE_PERFORMANCE_MONITORING=false

# =============================================================================
# THIRD PARTY INTEGRATIONS
# =============================================================================
# Google OAuth
REACT_APP_GOOGLE_CLIENT_ID=

# Social media links
REACT_APP_FACEBOOK_URL=
REACT_APP_TWITTER_URL=
REACT_APP_LINKEDIN_URL=

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Debug options
REACT_APP_DEBUG_MODE=true
REACT_APP_SHOW_DEV_TOOLS=true

# API debugging
REACT_APP_LOG_API_CALLS=true
REACT_APP_LOG_LEVEL=debug

# Mock data (for development)
REACT_APP_USE_MOCK_DATA=false

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================
# Build optimization
GENERATE_SOURCEMAP=true
REACT_APP_ENABLE_SOURCE_MAPS=true

# Bundle analyzer
REACT_APP_ANALYZE_BUNDLE=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Content Security Policy
REACT_APP_CSP_ENABLED=true

# API request timeout (in milliseconds)
REACT_APP_API_TIMEOUT=30000

# Retry configuration
REACT_APP_MAX_RETRY_ATTEMPTS=3
REACT_APP_RETRY_DELAY=1000

# =============================================================================
# LOCALIZATION
# =============================================================================
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_SUPPORTED_LANGUAGES=en,es,fr

# =============================================================================
# CACHING
# =============================================================================
REACT_APP_CACHE_ENABLED=true
REACT_APP_CACHE_DURATION=3600000

# =============================================================================
# NOTIFICATIONS
# =============================================================================
REACT_APP_NOTIFICATION_POSITION=top-right
REACT_APP_NOTIFICATION_TIMEOUT=5000

# =============================================================================
# QUIZ SPECIFIC SETTINGS
# =============================================================================
REACT_APP_DEFAULT_QUIZ_TIME=60
REACT_APP_MIN_QUIZ_TIME=1
REACT_APP_MAX_QUIZ_TIME=180

# Auto-save interval (in seconds)
REACT_APP_AUTOSAVE_INTERVAL=30

# Question types
REACT_APP_ENABLE_MULTIPLE_CHOICE=true
REACT_APP_ENABLE_TRUE_FALSE=true
REACT_APP_ENABLE_SHORT_ANSWER=true
REACT_APP_ENABLE_ESSAY=true